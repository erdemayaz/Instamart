<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ayaz.instamart.marttool">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.CaptureResult" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/logo_instamart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ayaz.instamart.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ayaz.instamart.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.ayaz.instamart.activities.ProductListActivity"
            android:label="@string/title_activity_product_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.ayaz.instamart.activities.TestActivity" />
        <activity
            android:name="com.ayaz.instamart.activities.SignActivity"
            android:label="@string/title_activity_sign"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.ayaz.instamart.activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ayaz.instamart.activities.SettingActivity"
            android:label="@string/title_activity_setting" />
        <activity
            android:name="com.ayaz.instamart.activities.ProductActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.ayaz.instamart.activities.CameraActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ayaz.instamart.activities.PublicationActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <service
            android:name="com.ayaz.instamart.services.LocationService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.ayaz.instamart.activities.DemandPublicationActivity" />
        <activity
            android:name="com.ayaz.instamart.activities.DemandListActivity"
            android:label="@string/title_activity_demand_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>